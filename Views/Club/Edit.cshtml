@using ComputerClub.Models
@model ComputerClub.Models.Club
@{
    ViewBag.Title = "Edit Club";
    var club = ViewData["club"] as Club;
}

<section id="genreCreateForm">
    @using (Html.BeginForm("Update", "Club", new
    {
        ClubID = club.ClubID,
        ReturnUrl = Url.Action("Index", "Club"),
    },
        FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h2>@ViewBag.Title</h2>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="big-form-div">
            <div class="myform-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @Value = club.Name })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <div class="myform-group">
                @Html.LabelFor(m => m.Street, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Street, new { @class = "form-control", @Value = club.Street })
                @Html.ValidationMessageFor(m => m.Street, "", new { @class = "text-danger" })
            </div>

            <div class="myform-group">
                @Html.LabelFor(m => m.House, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.House, new { @class = "form-control", @Value = club.House })
                @Html.ValidationMessageFor(m => m.House, "", new { @class = "text-danger" })
            </div>

            <div class="myform-group">
                @Html.LabelFor(m => m.Flat, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Flat, new { @class = "form-control", @Value = club.Flat })
                @Html.ValidationMessageFor(m => m.Flat, "", new { @class = "text-danger" })
            </div>

            <div class="myform-group">
                @Html.LabelFor(m => m.Phone, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @Value = club.Phone })
                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="submit-div">
            <input type="submit" value="Submit" class="mybtn-submit" />
            <a href="@Url.Action("Index", "Club")" class="mybtn-danger">
                Cancel
            </a>
        </div>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}