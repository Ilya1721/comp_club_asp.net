
@{
    ViewBag.Title = "Event Roles";
}

@{
    var eventRoles = ViewData["eventRoles"] as List<ComputerClub.Models.EventRole>;
}

<div class="games">
    @Html.Partial("_LeftMenu")
    <div class="img-div">
        <h3>Усі типи відвідувачів</h3>
        <div class="add-div">
            <a href="#" class="mybtn-warning">
                Додати тип відвідувача
            </a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Назва</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in eventRoles)
                {
                <tr>
                    <td>@item.EventRoleID</td>
                    <td><span>@item.Name</span></td>
                    <td>
                        <a href="#" class="mybtn-warning">
                            Edit
                        </a>
                    </td>
                    <td>
                        <a href="#" class="mybtn-danger">
                            Delete
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
