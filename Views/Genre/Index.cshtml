
@{
    ViewBag.Title = "Genres";
}

@{
    var genres = ViewData["genres"] as List<ComputerClub.Models.Genre>;
}

<div class="games">
    @Html.Partial("_LeftMenu")
    <div class="img-div">
        <h3>Усі жанри</h3>
        <div class="add-div">
            <a href='@Url.Action("Create", "Genre")'
               class="mybtn-warning">
                Додати новий жанр
            </a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Назва</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in genres)
                {
                    <tr>
                        <td>@item.GenreID</td>
                        <td><span>@item.Name</span></td>
                        <td>
                            <a href='@Url.Action("Edit", "Genre")'
                               class="mybtn-warning">
                                Edit
                            </a>
                        </td>
                        <td>
                            <a href="#" class="mybtn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
