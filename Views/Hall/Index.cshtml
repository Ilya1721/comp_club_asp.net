
@{
    ViewBag.Title = "Clubs";
}

@{
    var halls = ViewData["halls"] as List<ComputerClub.Models.Hall>;
}

<div class="games">
    @Html.Partial("_LeftMenu")
    <div class="img-div">
        <h3>Усі зали</h3>
        <div class="add-div">
            <a href="#" class="mybtn-warning">
                Додати зал
            </a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Назва</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in halls)
                {
                <tr>
                    <td>@item.HallID</td>
                    <td><span>@item.Name</span></td>
                    <td>
                        <a href="#" class="mybtn-warning">
                            Edit
                        </a>
                    </td>
                    <td>
                        <a href="#" class="mybtn-danger">
                            Delete
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
