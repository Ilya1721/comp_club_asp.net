@using ComputerClub.Models
@model ComputerClub.Models.Club
@{
    ViewBag.Title = "Edit Logo";
    var club = ViewData["club"] as Club;
}

<section id="genreCreateForm">
    @using (Html.BeginForm("Update", "Logo", new
    {
        ClubID = club.ClubID,
        ReturnUrl = Url.Action("Index", "Logo"),
    },
        FormMethod.Post, new
        {
            @class = "form-horizontal",
            role = "form",
            enctype = "multipart/form-data"
        }))

    {
        <h2>@ViewBag.Title</h2>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-div">
            <input type="file" name="upload" /><br>
        </div>

        <div class="submit-div">
            <input type="submit" value="Submit" class="mybtn-submit" />
            <a href="@Url.Action("Index", "Logo")" class="mybtn-danger">
                Cancel
            </a>
        </div>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}