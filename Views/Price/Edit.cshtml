@using ComputerClub.Models
@model ComputerClub.Models.Club
@{
    ViewBag.Title = "Edit Price";
    var club = ViewData["club"] as Club;
}

<section id="genreCreateForm">
    @using (Html.BeginForm("Update", "Price", new
    {
        ClubID = club.ClubID,
        ReturnUrl = Url.Action("Index", "Price"),
        enctype = "multipart/form-data",
    },
        FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h2>@ViewBag.Title</h2>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-div">
            <input type="file" name="upload" /><br>
        </div>

        <div class="submit-div">
            <input type="submit" value="Submit" class="mybtn-submit" />
            <a href="@Url.Action("Index", "Price")" class="mybtn-danger">
                Cancel
            </a>
        </div>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}